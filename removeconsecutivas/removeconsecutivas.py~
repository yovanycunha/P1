# Remove Consecutivas
# (C) 2016, Yovany Cunha/UFCG, Programa√ßao I

def remove_consecutivas(palavras):
	for i in range(len(palavras)-1,-1,-1):
		for l in range(1,len(palavras)-1):
			if palavras[i][l].lower() == palavras[i][(l-1)].lower():
				palavras.pop(i)

#lista1 = ['arara', 'tv',   'bacia']
